<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ambition.spotfix">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SOS"
        tools:ignore="AllowBackup">

        <activity
            android:exported="false"
            android:screenOrientation="portrait"
            android:name="com.ambition.spotfix.MapView" />

        <activity
            android:exported="false"
            android:screenOrientation="portrait"
            android:name="com.ambition.spotfix.Info" />

        <activity
            android:exported="false"
            android:screenOrientation="portrait"
            android:name="com.ambition.spotfix.Profile" />

        <activity
            android:exported="false"
            android:screenOrientation="portrait"
            android:name="com.ambition.spotfix.Home" />

        <activity
            android:exported="false"
            android:screenOrientation="portrait"
            android:name="com.ambition.spotfix.Register" />

        <activity
            android:exported="false"
            android:screenOrientation="portrait"
            android:name="com.ambition.spotfix.Login" />

        <activity
            android:exported="false"
            android:screenOrientation="portrait"
            android:name="com.ambition.spotfix.Report" />

        <activity
            android:exported="false"
            android:screenOrientation="portrait"
            android:name="com.ambition.spotfix.History" />

        <activity
            android:exported="false"
            android:screenOrientation="portrait"
            android:name="com.ambition.spotfix.Reset" />

        <activity
            android:exported="false"
            android:screenOrientation="portrait"
            android:name="com.ambition.spotfix.LanguageSelector" />

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name="com.ambition.spotfix.Auth">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>